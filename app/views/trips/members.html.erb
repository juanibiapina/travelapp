<% content_for :title, "Members" %>

<%= render "trips/header_with_tabs" %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="mb-6 flex items-center justify-between">
        <div>
          <h2 class="text-lg font-medium text-gray-900">Trip Members</h2>
          <p class="mt-1 text-sm text-gray-600">People who have access to this trip</p>
        </div>
        <% if policy(@trip).update? %>
          <%= link_to "Add Member", new_trip_trip_member_path(@trip), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors duration-200" %>
        <% end %>
      </div>
      
      <div class="space-y-3">
        <% @memberships.each do |membership| %>
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-200">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <% if membership.user.picture.present? %>
                  <img src="<%= membership.user.picture %>" alt="<%= membership.user.name || membership.user.account&.email %>" class="w-10 h-10 rounded-full object-cover">
                <% else %>
                  <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                  </div>
                <% end %>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900">
                  <%= membership.user.name.present? ? membership.user.name : membership.user.account&.email %>
                </div>
                <% if membership.user.account&.email.present? && membership.user.name.present? %>
                  <div class="text-sm text-gray-500">
                    <%= membership.user.account.email %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="flex-shrink-0 flex items-center space-x-2">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= membership.role == 'owner' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                <% if membership.role == 'owner' %>
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217zM15.657 6.343a1 1 0 011.414 0A9.972 9.972 0 0119 12a9.972 9.972 0 01-1.929 5.657 1 1 0 11-1.414-1.414A7.971 7.971 0 0017 12c0-2.21-.896-4.21-2.343-5.657a1 1 0 010-1.414z" clip-rule="evenodd"/>
                  </svg>
                <% end %>
                <%= membership.role.titleize %>
              </span>
              
              <% if policy(@trip).update? && membership.user.account.nil? %>
                <div class="flex items-center space-x-1">
                  <%= link_to edit_trip_trip_member_path(@trip, membership.user), class: "p-1 text-gray-400 hover:text-blue-600 transition-colors duration-200", title: "Edit member" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>
                  
                  <% unless membership.role == 'owner' %>
                    <%= link_to trip_trip_member_path(@trip, membership.user), method: :delete, 
                          data: { confirm: "Are you sure you want to remove this member?" },
                          class: "p-1 text-gray-400 hover:text-red-600 transition-colors duration-200", 
                          title: "Remove member" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>