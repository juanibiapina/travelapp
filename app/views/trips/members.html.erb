<% content_for :title, "Members" %>
<% content_for :header do %>
  <%= render "trips/header_with_tabs" %>
<% end %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="mb-6">
        <h2 class="text-lg font-medium text-gray-900">Trip Members</h2>
        <p class="mt-1 text-sm text-gray-600">People who have access to this trip and their starting places</p>
      </div>

      <!-- Add Guest Member Form -->
      <% if policy(@trip).update? %>
        <div class="mb-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
          <h3 class="text-md font-medium text-gray-900 mb-3">Add Member Without Account</h3>
          <p class="text-sm text-gray-600 mb-4">Add family members, children, or anyone who doesn't need an account</p>
          
          <%= form_with model: @user || User.new, url: create_guest_member_trip_path(@trip), method: :post, local: true, class: "space-y-4" do |form| %>
            <% if @user&.errors&.any? %>
              <div class="bg-red-50 border border-red-200 rounded-md p-3">
                <div class="text-sm text-red-800">
                  <ul class="list-disc list-inside">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="md:col-span-2">
                <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :name, placeholder: "Member name", 
                      class: "w-full border-gray-300 rounded-md focus:border-blue-500 focus:ring-blue-500 text-sm",
                      value: @user&.name %>
              </div>
              <div>
                <%= form.label :picture, "Picture URL (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.url_field :picture, placeholder: "https://example.com/picture.jpg", 
                      class: "w-full border-gray-300 rounded-md focus:border-blue-500 focus:ring-blue-500 text-sm",
                      value: @user&.picture %>
              </div>
            </div>

            <div class="flex justify-end">
              <%= form.submit "Add Member", class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
            </div>
          <% end %>
        </div>
      <% end %>
      
      <div class="space-y-3">
        <% @memberships.each do |membership| %>
          <div class="flex items-center justify-between p-4 <%= membership.starting_place.present? ? 'bg-gray-50' : 'bg-yellow-50 border-l-4 border-yellow-400' %> rounded-lg hover:bg-gray-100 transition-colors duration-200" data-testid="member-<%= membership.user.id %>">>
            <div class="flex items-center flex-1">
              <div class="flex-shrink-0">
                <% if membership.user.picture.present? %>
                  <img src="<%= membership.user.picture %>" alt="<%= membership.user.name || membership.user.account&.email %>" class="w-10 h-10 rounded-full object-cover">
                <% else %>
                  <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center">
                    <%= heroicon "user", options: { class: "w-5 h-5 text-gray-600" } %>
                  </div>
                <% end %>
              </div>
              <div class="ml-4 flex-1">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="text-sm font-medium text-gray-900 flex items-center">
                      <%= membership.user.name.present? ? membership.user.name : membership.user.account&.email %>
                      <% unless membership.user.account.present? %>
                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                          Guest
                        </span>
                      <% end %>
                    </div>
                    <% if membership.user.account&.email.present? && membership.user.name.present? %>
                      <div class="text-sm text-gray-500">
                        <%= membership.user.account.email %>
                      </div>
                    <% end %>
                    <div class="mt-1">
                      <% if membership.starting_place.present? %>
                        <div class="text-sm text-blue-600 flex items-center">
                          <%= heroicon "map-pin", options: { class: "w-4 h-4 mr-1" } %>
                          Starting from: <%= membership.starting_place.name %>
                        </div>
                      <% else %>
                        <div class="text-sm text-yellow-600 flex items-center">
                          <%= heroicon "exclamation-triangle", options: { class: "w-4 h-4 mr-1" } %>
                          No starting place set
                        </div>
                      <% end %>
                    </div>
                  </div>
                  <div class="ml-4">
                    <%= form_with url: update_member_starting_place_trip_path(@trip), method: :patch, local: true, class: "flex items-center space-x-2" do |form| %>
                      <%= form.hidden_field :membership_id, value: membership.id %>
                      <%= form.select :starting_place_id, 
                            options_from_collection_for_select(@places, :id, :name, membership.starting_place&.id),
                            { prompt: "Select starting place", include_blank: "No starting place" },
                            { class: "text-sm border-gray-300 rounded-md focus:border-blue-500 focus:ring-blue-500", onchange: "this.form.submit();" } %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex-shrink-0 ml-4 flex items-center space-x-2">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= membership.role == 'owner' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                <% if membership.role == 'owner' %>
                  <%= heroicon "speakerphone", variant: :solid, options: { class: "w-3 h-3 mr-1" } %>
                <% end %>
                <%= membership.role.titleize %>
              </span>

              <!-- Guest member actions (only for users without accounts and trip owners) -->
              <% if policy(@trip).update? && membership.user.account.nil? %>
                <div class="flex items-center space-x-1">
                  <!-- Edit guest member button -->
                  <button type="button" 
                          class="text-gray-400 hover:text-blue-600 p-1 rounded transition-colors duration-200"
                          onclick="document.getElementById('edit-member-<%= membership.id %>').classList.toggle('hidden')"
                          title="Edit member">
                    <%= heroicon "pencil", options: { class: "w-4 h-4" } %>
                  </button>

                  <!-- Delete guest member button -->
                  <%= button_to destroy_guest_member_trip_path(@trip), 
                        method: :delete,
                        params: { membership_id: membership.id },
                        class: "text-gray-400 hover:text-red-600 p-1 rounded transition-colors duration-200",
                        data: { confirm: "Are you sure you want to remove #{membership.user.name}?" },
                        title: "Remove member" do %>
                    <%= heroicon "trash", options: { class: "w-4 h-4" } %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Edit guest member form (hidden by default) -->
          <% if policy(@trip).update? && membership.user.account.nil? %>
            <div id="edit-member-<%= membership.id %>" class="hidden mt-3 p-3 bg-gray-50 rounded-lg border border-gray-200">
              <%= form_with model: membership.user, url: update_guest_member_trip_path(@trip), method: :patch, local: true, class: "space-y-3" do |form| %>
                <%= hidden_field_tag :membership_id, membership.id %>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                  <div>
                    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= form.text_field :name, class: "w-full border-gray-300 rounded-md focus:border-blue-500 focus:ring-blue-500 text-sm" %>
                  </div>
                  <div>
                    <%= form.label :picture, "Picture URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= form.url_field :picture, class: "w-full border-gray-300 rounded-md focus:border-blue-500 focus:ring-blue-500 text-sm" %>
                  </div>
                </div>

                <div class="flex justify-end space-x-2">
                  <button type="button" 
                          onclick="document.getElementById('edit-member-<%= membership.id %>').classList.add('hidden')"
                          class="px-3 py-1 text-sm text-gray-600 hover:text-gray-800 transition-colors duration-200">
                    Cancel
                  </button>
                  <%= form.submit "Update", class: "px-3 py-1 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>