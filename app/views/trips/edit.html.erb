<% content_for :title, "Editing trip" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Editing trip</h1>
  </div>

  <div class="bg-white p-8 rounded-lg shadow-sm border border-gray-200">
    <%= render "form", trip: @trip %>
  </div>

  <div class="mt-6 flex gap-3">
    <%= link_to "Show this trip", @trip, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    <span class="text-gray-400">|</span>
    <%= link_to "Back to trips", trips_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>
</div>
