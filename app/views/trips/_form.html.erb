<%= form_with(model: trip, class: "space-y-8") do |form| %>
  <% if trip.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= heroicon "x-circle", variant: :solid, options: { class: "h-5 w-5 text-red-400" } %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% trip.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :name, class: "block text-sm font-semibold text-gray-900 mb-2" do %>
        <div class="flex items-center">
          <%= heroicon "wifi", options: { class: "w-5 h-5 mr-2 text-blue-600" } %>
          Trip Name
        </div>
      <% end %>
      <%= form.text_field :name, 
                          placeholder: "e.g., Summer Vacation in Europe, Business Trip to Tokyo...",
                          class: "w-full px-4 py-3 text-lg border border-gray-300 rounded-lg shadow-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" %>
      <p class="mt-2 text-sm text-gray-600">Give your trip a memorable name that describes your destination or purpose.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :start_date, class: "block text-sm font-semibold text-gray-900 mb-2" do %>
          <div class="flex items-center">
            <%= heroicon "calendar-days", options: { class: "w-5 h-5 mr-2 text-blue-600" } %>
            Start Date
          </div>
        <% end %>
        <%= form.date_field :start_date, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" %>
      </div>

      <div>
        <%= form.label :end_date, class: "block text-sm font-semibold text-gray-900 mb-2" do %>
          <div class="flex items-center">
            <%= heroicon "calendar-days", options: { class: "w-5 h-5 mr-2 text-blue-600" } %>
            End Date
          </div>
        <% end %>
        <%= form.date_field :end_date, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" %>
      </div>
    </div>

    <p class="text-sm text-gray-600">
      <%= heroicon "information-circle", options: { class: "w-4 h-4 inline mr-1 text-blue-500" } %>
      Select your travel dates to help organize your trip. The end date must be the same or after the start date.
    </p>
  </div>

  <div class="flex items-center justify-between pt-6 border-t border-gray-200">
    <div class="text-sm text-gray-500">
      Ready to start planning your adventure?
    </div>
    <%= form.submit class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-sm transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>
