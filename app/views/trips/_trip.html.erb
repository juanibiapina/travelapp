<div id="<%= dom_id trip %>">
  <div class="space-y-3">
    <div class="flex items-center">
      <span class="text-sm font-medium text-gray-500 mr-2">Name:</span>
      <span class="text-lg font-semibold text-gray-900"><%= trip.name %></span>
    </div>
    
    <div class="flex items-center">
      <span class="text-sm font-medium text-gray-500 mr-2">Start Date:</span>
      <span class="text-gray-900"><%= trip.start_date&.strftime("%B %d, %Y") %></span>
    </div>
    
    <div class="flex items-center">
      <span class="text-sm font-medium text-gray-500 mr-2">End Date:</span>
      <span class="text-gray-900"><%= trip.end_date&.strftime("%B %d, %Y") %></span>
    </div>
  </div>
</div>
