<div id="<%= dom_id trip %>" class="trip-header">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= trip.name %></h2>
      
      <!-- Trip dates prominently displayed -->
      <div class="mb-4 p-4 bg-blue-50 rounded-lg border border-blue-200">
        <div class="flex items-center text-blue-800">
          <%= heroicon "calendar-days", options: { class: "w-5 h-5 mr-2" } %>
          <span class="font-semibold">
            <%= trip.start_date.strftime("%B %d, %Y") %>
            <% unless trip.start_date == trip.end_date %>
              â€” <%= trip.end_date.strftime("%B %d, %Y") %>
            <% end %>
          </span>
          <span class="ml-2 text-sm text-blue-600">
            (<%= distance_of_time_in_words(trip.start_date, trip.end_date + 1.day) %>)
          </span>
        </div>
      </div>
      
      <div class="flex items-center space-x-4 text-sm text-gray-600">
        <div class="flex items-center">
          <%= heroicon "users", options: { class: "w-4 h-4 mr-1.5" } %>
          <span><%= pluralize(trip.trip_memberships.count, 'member') %></span>
        </div>
        <div class="flex items-center">
          <%= heroicon "link", options: { class: "w-4 h-4 mr-1.5" } %>
          <span><%= pluralize(trip.links.count, 'link') %></span>
        </div>
        <div class="flex items-center">
          <%= heroicon "calendar-days", options: { class: "w-4 h-4 mr-1.5" } %>
          <span>Created <%= time_ago_in_words(trip.created_at) %> ago</span>
        </div>
      </div>
    </div>
  </div>
</div>
