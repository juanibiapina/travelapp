<div class="max-w-2xl mx-auto">
  <div class="bg-white p-8 rounded-lg shadow-sm border border-gray-200">
    <%= render @trip %>
    
    <!-- Members Section -->
    <div class="mt-8 pt-6 border-t border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Members</h3>
      
      <div class="space-y-3">
        <% @trip.trip_memberships.includes(:user).each do |membership| %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
            <div class="flex-1">
              <div class="text-sm font-medium text-gray-900">
                <%= membership.user.email %>
              </div>
            </div>
            <div class="ml-3">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= membership.role == 'owner' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                <%= membership.role.titleize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <% if policy(@trip).update? %>
      <!-- Invite Links Section -->
      <div class="mt-8 pt-6 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Invite Links</h3>
        
        <!-- Generate Invite Button -->
        <div class="mb-6">
          <%= button_to "Generate Invite Link", trip_invites_path(@trip), method: :post,
                        class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
        </div>
        
        <!-- Active Invites List -->
        <div class="space-y-3">
          <% active_invites = @trip.invites.valid_invites %>
          <% if active_invites.any? %>
            <% active_invites.each do |invite| %>
              <div class="flex items-center justify-between p-3 bg-green-50 rounded-md">
                <div class="flex-1">
                  <div class="text-sm text-gray-600 mb-1">Invite Link:</div>
                  <div class="flex items-center gap-2">
                    <input type="text" 
                           value="<%= accept_invite_url(invite.token) %>" 
                           readonly 
                           class="flex-1 px-2 py-1 text-sm border border-gray-300 rounded bg-white select-all"
                           onclick="this.select()">
                    <button onclick="navigator.clipboard.writeText('<%= accept_invite_url(invite.token) %>')" 
                            class="bg-blue-500 hover:bg-blue-600 text-white text-xs px-2 py-1 rounded">
                      Copy
                    </button>
                  </div>
                  <div class="text-xs text-gray-500 mt-1">
                    Created <%= time_ago_in_words(invite.created_at) %> ago
                    <% if invite.expires_at %>
                      • Expires <%= time_ago_in_words(invite.expires_at) %>
                    <% else %>
                      • Never expires
                    <% end %>
                  </div>
                </div>
                <div class="ml-3">
                  <%= button_to "Revoke", [@trip, invite], method: :delete,
                                data: { confirm: "Are you sure? This will make the invite link unusable." },
                                class: "text-red-600 hover:text-red-800 text-sm font-medium bg-transparent border-0 p-0" %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 text-sm italic">No active invite links. Generate one to share this trip!</p>
          <% end %>
        </div>
      </div>
    <% end %>
    
    <!-- Links Section -->
    <div class="mt-8 pt-6 border-t border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Links</h3>
      
      <!-- Add Link Form -->
      <div class="mb-6">
        <% new_link = @trip.links.build %>
        <%= form_with(model: [@trip, new_link], local: true, class: "space-y-4") do |form| %>
          <div class="flex gap-3">
            <%= form.url_field :url, placeholder: "Paste a link here...", 
                              class: "flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            <%= form.submit "Add Link", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
          </div>
        <% end %>
      </div>
      
      <!-- Links List -->
      <div id="links" class="space-y-3">
        <% persisted_links = @trip.links.select(&:persisted?) %>
        <% if persisted_links.any? %>
          <% persisted_links.each do |link| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
              <div class="flex-1">
                <%= link_to h(link.url), safe_link_url(link.url), target: "_blank", rel: "noopener", 
                          class: "text-blue-600 hover:text-blue-800 underline break-all" %>
              </div>
              <div class="flex items-center gap-2 ml-3">
                <%= link_to "Edit", edit_trip_link_path(@trip, link), 
                          class: "text-yellow-600 hover:text-yellow-800 text-sm font-medium inline-block" %>
                <%= button_to "Delete", [@trip, link], method: :delete, 
                            data: { confirm: "Are you sure?" },
                            class: "text-red-600 hover:text-red-800 text-sm font-medium bg-transparent border-0 p-0 inline-block align-baseline" %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm italic">No links added yet.</p>
        <% end %>
      </div>
    </div>
    
    <div class="mt-8 pt-6 border-t border-gray-200 flex flex-wrap gap-3">
      <%= link_to "Edit this trip", edit_trip_path(@trip), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
      <%= link_to "Back to trips", trips_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
      <%= button_to "Destroy this trip", @trip, method: :delete, 
                    data: { confirm: "Are you sure?" },
                    class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
    </div>
  </div>
</div>
