<% content_for :title, @trip_event.title %>

<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <div class="flex items-center mb-4">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <%= heroicon "calendar", options: { class: "w-6 h-6 text-blue-600" } %>
        </div>
      </div>
      <div class="ml-4">
        <h1 class="text-3xl font-bold text-gray-900"><%= @trip_event.title %></h1>
        <p class="mt-1 text-lg text-gray-600">
          <% if @trip_event.start_date == @trip_event.end_date %>
            <%= @trip_event.start_date.strftime("%B %d, %Y") %>
          <% else %>
            <%= @trip_event.start_date.strftime("%B %d") %> - <%= @trip_event.end_date.strftime("%B %d, %Y") %>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-200">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500">Event Title</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @trip_event.title %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Trip</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= link_to @trip.name, @trip, class: "text-blue-600 hover:text-blue-800" %>
        </dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Start Date</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @trip_event.start_date.strftime("%B %d, %Y") %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">End Date</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @trip_event.end_date.strftime("%B %d, %Y") %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Duration</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <% duration_days = (@trip_event.end_date - @trip_event.start_date).to_i + 1 %>
          <%= pluralize(duration_days, "day") %>
        </dd>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to @trip, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" do %>
        <%= heroicon "eye", options: { class: "w-4 h-4 mr-2" } %>
        View Trip
      <% end %>
      <span class="text-gray-400">â€¢</span>
      <%= link_to trip_trip_events_path(@trip), class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" do %>
        <%= heroicon "arrow-left", options: { class: "w-4 h-4 mr-2" } %>
        Back to Events
      <% end %>
    </div>

    <div class="flex items-center space-x-3">
      <%= link_to "Edit", edit_trip_trip_event_path(@trip, @trip_event), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      <%= button_to "Delete", [@trip, @trip_event], method: :delete, 
            class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2",
            data: { turbo_confirm: "Are you sure you want to delete this event?" } %>
    </div>
  </div>
</div>