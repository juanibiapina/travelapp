<% content_for :title, "New Event" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <div class="flex items-center mb-4">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <%= heroicon "plus", options: { class: "w-6 h-6 text-green-600" } %>
        </div>
      </div>
      <div class="ml-4">
        <h1 class="text-3xl font-bold text-gray-900">Add New Event</h1>
        <p class="mt-1 text-lg text-gray-600">Add an event to your trip</p>
      </div>
    </div>
  </div>

  <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-200">
    <%= render "form", trip_event: @trip_event %>
  </div>

  <div class="mt-6 flex items-center space-x-4">
    <%= link_to @trip, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" do %>
      <%= heroicon "eye", options: { class: "w-4 h-4 mr-2" } %>
      View Trip
    <% end %>
    <span class="text-gray-400">â€¢</span>
    <%= link_to trip_trip_events_path(@trip), class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" do %>
      <%= heroicon "arrow-left", options: { class: "w-4 h-4 mr-2" } %>
      Back to Events
    <% end %>
  </div>
</div>