<!-- app/views/trip_members/new.html.erb -->
<div class="max-w-md mx-auto">
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Add Trip Member</h2>
      <p class="text-sm text-gray-600 mt-1">Add someone to "<%= @trip.name %>" without requiring them to create an account</p>
    </div>

    <div class="p-6">
      <%= form_with(model: [@trip, @member], url: trip_members_path(@trip), local: true, class: "space-y-4") do |form| %>
        <% if @member.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @member.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, 
                              placeholder: "Enter member's name",
                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :picture, "Profile Picture URL (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.url_field :picture, 
                             placeholder: "https://example.com/picture.jpg",
                             class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-xs text-gray-500">You can add a profile picture by providing a URL to an image</p>
        </div>

        <div class="flex gap-3 pt-4">
          <%= form.submit "Add Member", 
                          class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
          <%= link_to "Cancel", @trip, 
                      class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded-lg text-center transition duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>