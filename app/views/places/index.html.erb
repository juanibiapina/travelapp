<% content_for :title, "Places" %>
<% content_for :header do %>
  <%= render "trips/header_with_tabs" %>
<% end %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-lg font-medium text-gray-900">Places</h2>
          <p class="mt-1 text-sm text-gray-600">Save important places and locations for your trip</p>
        </div>
        <%= link_to "Add New Place", new_trip_place_path(@trip), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      </div>

      <div id="places" class="space-y-3">
        <% if @places.any? %>
          <% @places.each do |place| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 border border-gray-200 rounded-lg hover:border-blue-300 hover:bg-blue-50 transition-all duration-200">
              <div class="flex-1 min-w-0">
                <div class="flex items-center">
                  <div class="flex-shrink-0 mr-3">
                    <div class="w-8 h-8 bg-blue-100 rounded-md flex items-center justify-center">
                      <%= heroicon "map-pin", options: { class: "w-4 h-4 text-blue-600" } %>
                    </div>
                  </div>
                  <div class="text-gray-900 font-medium">
                    <%= place.name %>
                  </div>
                  <div class="text-sm text-gray-500 mt-1">
                    <%= place.start_date.strftime("%b %d, %Y") %> - <%= place.end_date.strftime("%b %d, %Y") %>
                  </div>
                </div>
              </div>
              <div class="flex items-center gap-2 ml-4 flex-shrink-0">
                <%= link_to "Show", [@trip, place], class: "text-blue-600 hover:text-blue-800 text-sm font-medium px-2 py-1 rounded transition-colors duration-200" %>
                <%= link_to "Edit", edit_trip_place_path(@trip, place), class: "text-blue-600 hover:text-blue-800 text-sm font-medium px-2 py-1 rounded transition-colors duration-200" %>
                <%= button_to "Delete", [@trip, place], method: :delete, class: "text-red-600 hover:text-red-800 text-sm font-medium bg-transparent border-0 px-2 py-1 rounded transition-colors duration-200", data: { turbo_confirm: "Are you sure?" } %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-12 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
            <%= heroicon "map-pin", options: { class: "mx-auto h-12 w-12 text-gray-400" } %>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No places added yet</h3>
            <p class="mt-1 text-sm text-gray-500">Add places like hotels, restaurants, or attractions</p>
            <div class="mt-6">
              <%= link_to "Add Your First Place", new_trip_place_path(@trip), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>