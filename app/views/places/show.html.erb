<% content_for :title, @place.name %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 mr-4">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
              <%= heroicon "map-pin", options: { class: "w-6 h-6 text-blue-600" } %>
            </div>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-900"><%= @place.name %></h1>
            <p class="text-sm text-gray-600 mt-1">
              <%= @place.start_date.strftime("%B %d, %Y") %> - <%= @place.end_date.strftime("%B %d, %Y") %>
            </p>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <%= link_to "Edit", edit_trip_place_path(@trip, @place), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
          <%= button_to "Delete", [@trip, @place], method: :delete, class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2", data: { turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center">
    <%= link_to trip_places_path(@trip), class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" do %>
      <%= heroicon "arrow-left", options: { class: "w-4 h-4 mr-2" } %>
      Back to Places
    <% end %>
  </div>
</div>